<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kogitune.prelollipoptransition.SubActivity">

    <View
        android:id="@+id/bg_from"
        android:layout_width="109dp"
        android:layout_height="109dp"
        android:alpha="0"
        android:adjustViewBounds="true"
        android:layout_above="@+id/from_inner_image1"
        android:layout_toRightOf="@+id/to_inner_image"
        android:layout_toEndOf="@+id/to_inner_image"
        android:layout_marginLeft="76dp"
        android:layout_marginStart="76dp" />

    <View
        android:id="@+id/bg_to"
        android:alpha="1"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounder_rec"/>

    <ImageView
        android:id="@+id/sub_imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/photo" />

    <ImageView
        android:id="@+id/from_inner_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignEnd="@+id/sub_imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/sub_imageView"
        android:layout_gravity="right|bottom"
        android:adjustViewBounds="true"
        android:alpha="0"
        android:background="@color/accent_material_light"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/to_inner_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="left|bottom"
        android:adjustViewBounds="true"
        android:alpha="1"
        android:scaleType="centerCrop"
        android:src="@drawable/photo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/from_inner_image1"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_alignBottom="@+id/to_inner_image1"
        android:layout_alignEnd="@+id/sub_imageView"
        android:layout_alignRight="@+id/sub_imageView"
        android:layout_gravity="right|center_vertical"
        android:adjustViewBounds="true"
        android:alpha="0"
        android:background="@color/background_floating_material_dark"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/to_inner_image1"
        android:layout_width="198dp"
        android:layout_height="150dp"
        android:layout_gravity="left|center_vertical"
        android:adjustViewBounds="true"
        android:alpha="1"
        android:scaleType="centerCrop"
        android:src="@drawable/photo"
        android:layout_above="@+id/from_inner_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
